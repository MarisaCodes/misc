---
import PostContent from "../../components/PostContent.astro";
import { staticPathsSlugs } from "../../funcs/staticPathsSlugs";
import Layout from "../../layouts/Layout.astro";
import PostLayout from "../../layouts/PostLayout.astro";

export const getStaticPaths = async () => {
  const stories = await Astro.glob("../../content/short-stories/*.md");

  return staticPathsSlugs(stories);
};

const { title, Content, href } = Astro.props;
---

<PostLayout>
  <article class="section">
    <PostContent href={href} title={title}>
      <Content />
    </PostContent>
  </article>
  <hr class="navbar-separator my-0" />
</PostLayout>
